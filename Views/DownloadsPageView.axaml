<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:MWSManager.ViewModels"
			 xmlns:views="using:MWSManager.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:DataType="vm:DownloadsPageViewModel"
             x:Class="MWSManager.Views.DownloadsPageView">

	<UserControl.Styles>
		<Style Selector="ListBox.ModUpdates ListBoxItem">
			<Setter Property="Width" Value="350"/>
			<Setter Property="Margin" Value="4 0"/>
		</Style>
	</UserControl.Styles>

	<Panel HorizontalAlignment="Left">

		<ListBox Classes="FluentList ModUpdates" ItemsSource="{Binding Updates}">
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Horizontal"/>
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
		</ListBox>
		
		<Border Padding="16" IsVisible="{Binding !HasUpdates}">
			<TextBlock HorizontalAlignment="Center" Text="No updates or downloads currently active."/>
		</Border>
	</Panel>
</UserControl>
