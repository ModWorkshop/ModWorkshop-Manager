<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:MWSManager.ViewModels"
			 xmlns:views="using:MWSManager.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:DataType="vm:DownloadsPageViewModel"
             x:Class="MWSManager.Views.DownloadsPageView">
	<Panel>
		<ListBox IsVisible="{Binding HasDownloads}" ItemsSource="{Binding Downloads}" Classes="FluentList">
			<ListBox.Styles>
				<Style Selector="ListBoxItem">
					<Setter Property="IsHitTestVisible" Value="False"/>
				</Style>
			</ListBox.Styles>
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border ClipToBounds="True" CornerRadius="8">
						<StackPanel Width="400">
							<TextBlock Text="{Binding Name}"/>
							<TextBlock Text="{Binding ModName}"/>
							<TextBlock Text="{Binding ProgressText}"/>
							<TextBlock IsVisible="{Binding ShowProgressPercent}" >
								<Run Text="{Binding Progress}"/>%
							</TextBlock>
						</StackPanel>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<Border Padding="16" IsVisible="{Binding !HasDownloads}">
			<TextBlock HorizontalAlignment="Center" Text="No Downloads have been initiated yet."/>
		</Border>
	</Panel>
</UserControl>
