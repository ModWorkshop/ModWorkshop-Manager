<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:MWSManager.ViewModels"
			 xmlns:views="using:MWSManager.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:DataType="vm:DownloadsPageViewModel"
             x:Class="MWSManager.Views.DownloadsPageView">
	<Panel>
		<ListBox
			Classes="FluentList"
			ItemsSource="{Binding Updates}"
		>
		</ListBox>
		
		<Border Padding="16" IsVisible="{Binding !HasUpdates}">
			<TextBlock HorizontalAlignment="Center" Text="No Downloads have been initiated yet."/>
		</Border>
	</Panel>
</UserControl>
